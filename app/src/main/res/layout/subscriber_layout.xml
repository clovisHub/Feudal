<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="217dp">

        <Button
            android:id="@+id/btn_s_takeId"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:text="@string/s.take_a_picture"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_s.imgId"
            android:layout_width="226dp"
            android:layout_height="172dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/ic_launcher_round" />

        <Button
            android:id="@+id/btn_s_uploadId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_s_takeId"
            android:layout_alignLeft="@+id/btn_s_takeId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/btn_s_takeId"
            android:layout_marginBottom="20dp"
            android:text="@string/lbl_upload"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/btn_s_backId"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back" />

    </RelativeLayout>

    <EditText
        android:id="@+id/lbl_s_firstNameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="first name" />

    <EditText
        android:id="@+id/lbl_s_lastNameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last name" />

    <EditText
        android:id="@+id/lbl_s_usernameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username" />

    <EditText
        android:id="@+id/lbl_s_zipCodeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="zip code" />


    <Button
        android:id="@+id/btn_s_nextId"
        android:text="@string/lbl_next_save_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>